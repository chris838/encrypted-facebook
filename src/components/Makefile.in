# The location of the XPCOM components.
components_dir := components

# The target directory for the built XPT and JS files.
components_target_dir := $(build_dir)/$(components_dir)

# The source IDL files.
components_idl_sources := $(wildcard $(components_dir)/*.idl)

# The target XPT files.
components_xpt := \
  $(addprefix $(components_target_dir)/,$(addsuffix .xpt,$(basename $(notdir $(components_idl_sources)))))

# The source JS files.
components_js_sources := $(wildcard $(components_dir)/*.js)

# The target JS files.
components_js_targets := \
  $(addprefix $(components_target_dir)/,$(notdir $(components_js_sources)))

# The include paths to build the XPT files.
components_includes := -I $(GECKO_SDK)/idl \
                       -I $(components_dir)

$(components_target_dir)/%.xpt: $(components_dir)/%.idl $(components_target_dir)
	@xpidl -m typelib -w $(components_includes) -e $@ $<

$(components_target_dir)/%.js: $(components_dir)/%.js $(components_target_dir)
	@cp -f $< $@

$(components_target_dir): $(build_dir)
	@if [ ! -x $(components_target_dir) ]; \
  then \
    mkdir $(components_target_dir); \
  fi

